# Base environment variables (from @pbnj/core)
NODE_ENV=development
LOG_LEVEL=info
PORT=3000
HOST=localhost

# RPC Server specific configuration
RPC_PORT=19800
RPC_HOST=0.0.0.0
RPC_CORS_ORIGIN=*
RPC_MAX_PAYLOAD_SIZE=10485760
RPC_RATE_LIMIT_WINDOW=900000
RPC_RATE_LIMIT_MAX_REQUESTS=1000

# Database configuration (if needed)
DATABASE_URL=postgresql://user:password@localhost:5432/jam_rpc
DB_MAX_CONNECTIONS=10

# API configuration
API_TIMEOUT=30000
API_RETRIES=3 