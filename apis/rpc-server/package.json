{
  "name": "@pbnjam/rpc-server",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "main": "src/index.ts",
  "scripts": {
    "build:bin": "bun build ./src/index.ts --compile --outfile ./bin --sourcemap",
    "check": "tsc --pretty --noEmit",
    "clean": "rm -rf .turbo && rm -rf node_modules",
    "dev": "tsc -w",
    "start": "bun run ./src/index.ts 2>&1 | bunx pino-pretty",
    "start:dev": "bun run --hot ./src/index.ts 2>&1 | bunx pino-pretty"
  },
  "dependencies": {
    "@hono/node-server": "1.13.1",
    "@hono/node-ws": "1.0.4",
    "@hono/zod-validator": "0.4.3",
    "@pbnjam/codec": "workspace:*",
    "@pbnjam/core": "workspace:*",
    "@pbnjam/node": "workspace:*",
    "@pbnjam/types": "workspace:*",
    "hono": "4.6.11",
    "pino": "catalog:",
    "pino-pretty": "13.0.0",
    "viem": "catalog:",
    "ws": "8.18.0",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@pbnjam/typescript-config": "workspace:*",
    "@types/node": "22.10.2",
    "@types/ws": "8.5.13"
  }
}
