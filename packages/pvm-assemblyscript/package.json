{
  "name": "@pbnj/pvm-assemblyscript",
  "version": "0.0.1",
  "type": "module",
  "description": "PVM implementation in AssemblyScript (compiles to WebAssembly)",
  "main": "build/pvm.js",
  "types": "build/pvm.d.ts",
  "scripts": {
		"build": "npm run build:debug && npm run build:release",
		"build:all": "npm run build:debug && npm run build:release && npm run build:raw && npm run build:release-mini && npm run build:release-stub",
		"build:debug": "asc assembly/index.ts --target debug",
		"build:release": "asc assembly/index.ts --uncheckedBehavior=always --target release",
		"build:release-mini": "asc assembly/index.ts --uncheckedBehavior=always --target release-mini",
		"build:release-stub": "asc assembly/index.ts --uncheckedBehavior=always --target release-stub",
		"build:raw": "asc assembly/index.ts --target raw",
		"build:test": "asc assembly/test-run.ts --target test",
    "test": "npm run build:debug && node tests/index.js",
    "clean": "rm -rf build/ node_modules/",
    "format": "prettier --write assembly/**/*.ts"
  },
  "dependencies": {},
  "devDependencies": {
    "@assemblyscript/loader": "^0.27.29",
    "assemblyscript": "^0.27.29",
    "prettier": "^3.0.0"
  },
  "exports": {
    ".": {
      "import": "./build/pvm.js",
      "types": "./build/pvm.d.ts"
    },
    "./wasm": "./build/pvm.wasm",
    "./wasmAsInit": "./tests/wasmAsInit.ts"
  },
  "files": [
    "build/**",
    "assembly/**",
    "README.md"
  ]
}
