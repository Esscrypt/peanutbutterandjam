{
  "name": "@pbnj/state",
  "version": "0.0.1",
  "type": "module",
  "main": "src/index.ts",
  "scripts": {
    "check": "tsc --pretty --noEmit && bun run db:check:core",
    "clean": "rm -rf .turbo && rm -rf node_modules",
    "db:check:core": "drizzle-kit check --config ./drizzle.core.config.ts",
    "db:migrate:core": "drizzle-kit migrate --config ./drizzle.core.config.ts",
    "db:seed": "bun run ./src/seed.ts",
    "db:generate:core": "drizzle-kit generate --config ./drizzle.core.config.ts",
    "db:drop:core": "drizzle-kit drop --config ./drizzle.core.config.ts"
  },
  "dependencies": {
    "drizzle-orm": "0.41.0",
    "postgres": "3.4.7",
    "viem": "2.35.1"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0",
    "bun-types": "latest",
    "drizzle-kit": "0.30.6",
    "@pbnj/typescript-config": "workspace:*"
  },
  "engines": {
    "bun": "latest"
  }
}
