{
  "name": "@pbnjam/erasure-coding",
  "version": "0.1.0",
  "description": "Erasure coding implementation for JAM protocol data availability",
  "type": "module",
  "main": "src/index.ts",
  "module": "src/index.ts",
  "types": "src/index.ts",
  "scripts": {
    "build": "bun run build:native && tsc",
    "build:native": "cd rust-reed-solomon && bun run build",
    "build:native:debug": "cd rust-reed-solomon && bun run build:debug",
    "build:ts": "tsc",
    "test": "echo 'No tests in CI'",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "clean": "rm -rf dist && rm -rf node_modules && rm -rf .turbo && cd rust-reed-solomon && bun run clean",
    "prepare": "bun run build:native || echo 'Native build failed, continuing without native module'"
  },
  "dependencies": {
    "@pbnjam/core": "workspace:*",
    "@pbnjam/types": "catalog:",
    "@types/hapi__catbox": "catalog:"
  },
  "devDependencies": {
    "@pbnjam/typescript-config": "workspace:*",
    "@types/node": "22.13.10",
    "typescript": "catalog:",
    "biome": "0.3.3",
    "@napi-rs/cli": "^2.18.0"
  },
  "keywords": [
    "erasure-coding",
    "reed-solomon",
    "data-availability",
    "jam-protocol"
  ],
  "author": "JAM Protocol Team",
  "license": "MIT"
}
