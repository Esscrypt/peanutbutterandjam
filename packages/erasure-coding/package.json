{
  "name": "@pbnj/erasure-coding",
  "version": "0.1.0",
  "description": "Erasure coding implementation for JAM protocol data availability",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "bun run build:native && tsc",
    "build:native": "cd rust-reed-solomon && npm run build",
    "build:native:debug": "cd rust-reed-solomon && npm run build:debug",
    "build:ts": "tsc",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "clean": "rm -rf dist && cd rust-reed-solomon && rm -rf target",
    "prepare": "bun run build:native || echo 'Native build failed, continuing without native module'"
  },
  "dependencies": {
    "@pbnj/core": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "22.13.10",
    "typescript": "5.8.2",
    "vitest": "2.1.9",
    "biome": "0.3.3",
    "@napi-rs/cli": "^2.18.0"
  },
  "keywords": [
    "erasure-coding",
    "reed-solomon",
    "data-availability",
    "jam-protocol"
  ],
  "author": "JAM Protocol Team",
  "license": "MIT"
}
