{
  "name": "@pbnjam/pvm-rust-native",
  "version": "0.0.1",
  "description": "PVM implementation in Rust (NAPI native addon, same API as pvm-assemblyscript)",
  "main": "index.js",
  "types": "index.d.ts",
  "napi": {
    "name": "pbnjam_pvm_rust",
    "triples": [
      "aarch64-apple-darwin",
      "x86_64-apple-darwin",
      "x86_64-unknown-linux-gnu",
      "aarch64-unknown-linux-gnu"
    ]
  },
  "exports": {
    ".": "./package.json",
    "./native": "./native/index.js"
  },
  "scripts": {
    "artifacts": "bunx @napi-rs/cli artifacts",
    "build": "bunx @napi-rs/cli build --platform --release -o native",
    "build:with-log-host": "bunx @napi-rs/cli build --platform --release -o native --features log_host_call_logging",
    "build:with-logs": "bunx @napi-rs/cli build --platform --release -o native --features host_calls_logging",
    "build:with-logs-errors": "bunx @napi-rs/cli build --platform --release -o native --features host_calls_errors_only,log_host_call_logging",
    "build:with-all-logs": "bunx @napi-rs/cli build --platform --release -o native --features log_host_call_logging,host_calls_logging",
    "build:debug": "bunx @napi-rs/cli build --platform -o native",
    "clean": "rm -rf target/ && rm -rf native/",
    "prepare": "bun run build || echo 'Native build failed, continuing without native module'",
    "test": "bun test tests/"
  },
  "devDependencies": {
    "@napi-rs/cli": "^2.18.0"
  }
}
