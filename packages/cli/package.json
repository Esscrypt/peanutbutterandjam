{
  "name": "@pbnjam/cli",
  "version": "0.0.1",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "pbnj": "./dist/index.js"
  },
  "pkg": {
    "assets": [
      "dist/**/*"
    ],
    "targets": [
      "node18-linux-x64",
      "node18-macos-x64",
      "node18-win-x64"
    ],
    "outputPath": "dist/bin",
    "scripts": [
      "dist/**/*.js"
    ]
  },
  "scripts": {
    "build": "bun build ./src/index.ts --compile --outfile ./bin/pbnj --sourcemap --minify-whitespace --minify-syntax --target bun",
    "build:bundle": "esbuild src/index.ts --bundle --platform=node --target=node18 --outfile=dist/bundle.js --format=cjs",
    "build:pkg": "bun run build:bundle && npx pkg dist/bundle.js --targets node18-linux-x64,node18-macos-x64,node18-win-x64 --out-path dist/bin --public",
    "build:all": "bun run build:pkg",
    "check": "tsc --pretty --noEmit",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "test": "bun test --pass-with-no-tests",
    "clean": "rm -rf .turbo && rm -rf node_modules && rm -rf dist",
    "dev": "tsx src/index.ts"
  },
  "dependencies": {
    "@pbnjam/core": "workspace:*",
    "@pbnjam/node": "workspace:*",
    "@pbnjam/types": "workspace:*",
    "@pbnjam/codec": "workspace:*",
    "@pbnjam/genesis": "workspace:*",
    "dotenv": "catalog:",
    "commander": "catalog:"
  },
  "devDependencies": {
    "@pbnjam/typescript-config": "workspace:*",
    "@types/node": "^22.0.0",
    "esbuild": "^0.20.0",
    "pkg": "^5.8.1",
    "tsx": "^4.19.2",
    "typescript": "^5.8.3",
    "vitest": "^2.1.9"
  },
  "exports": {
    ".": "./src/index.ts"
  }
}
