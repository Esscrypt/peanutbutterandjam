{
  "name": "peanutbutterandjam",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "config/*",
    "packages/*",
    "apis/*",
    "infra/*"
  ],
  "scripts": {
    "build": "turbo run build --output-logs=full --log-order=stream",
    "check": "turbo run check --cache=local:r,remote:r --output-logs=full",
    "build:main": "bun build ./infra/node/services/main-service.ts --compile --outfile ./bin/main-service --sourcemap --minify-whitespace --minify-syntax --target bun ",
    "build:fuzzer": "bun build ./infra/node/fuzzer-target.ts --compile --outfile ./bin/fuzzer-target --sourcemap --minify-whitespace --minify-syntax --target bun ",
    "clean": "turbo run clean && rm -rf node_modules",
    "format": "biome format . --write",
    "generate": "turbo run generate --cache:local:r,remote:r --parallel --continue",
    "lint": "biome check .",
    "lint:fix": "biome check . --write",
    "test": "turbo run test --parallel",
    "prepare": "lefthook install",
    "drizzle-studio": "cd ./packages/state && bun drizzle-kit studio"
  },
  "dependencies": {
    "@peculiar/asn1-pfx": "catalog:",
    "@types/hapi__catbox": "catalog:",
    "@types/node": "24.2.1",
    "dotenv": "catalog:",
    "@noble/hashes": "catalog:",
    "@noble/curves": "catalog:",
    "viem": "catalog:",
    "zod": "catalog:",
    "pino": "catalog:"
  },
  "devDependencies": {
    "@biomejs/biome": "2.1.3",
    "@types/bun": "1.3.1",
    "@types/hapi": "18.0.14",
    "@types/hapi__shot": "6.0.0",
    "bun-types": "1.3.1",
    "lefthook": "1.12.2",
    "turbo": "2.5.5",
    "typescript": "5.9.2"
  },
  "catalog": {
    "@noble/hashes": "2.0.1",
    "@noble/curves": "2.0.1",
    "@noble/ed25519": "3.0.0",
    "@types/bun": "1.3.2",
    "bun-types": "1.3.2",
    "@pbnjam/bandersnatch": "0.7.2-rc1",
    "@pbnjam/bandersnatch-vrf": "0.7.2-rc2",
    "@pbnjam/types": "0.7.2",
    "viem": "2.32.0",
    "zod": "3.25.76",
    "pino": "10.1.0",
    "dotenv": "17.2.3",
    "@types/hapi__catbox": "12.1.0",
    "typescript": "5.9.2",
    "@infisical/quic": "1.0.8",
    "@peculiar/webcrypto": "1.5.0",
    "@peculiar/x509": "1.14.0",
    "@peculiar/asn1-pfx": "2.6.0",
    "asn1js": "3.0.6",
    "blakejs": "1.2.1",
    "eckey-util": "1.0.4",
    "node-forge": "1.3.1",
    "pkijs": "3.2.5",
    "u8a-utils": "1.0.12",
    "@types/node": "25.0.3",
    "commander": "14.0.2",
    "radash": "12.1.1"
  },
  "packageManager": "bun@1.3.5",
  "trustedDependencies": [
    "@biomejs/biome"
  ]
}
