{
  "name": "peanutbutterandjam",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "config/*",
    "packages/*",
    "apis/*",
    "infra/*"
  ],
  "scripts": {
    "build": "turbo run build --output-logs=full --log-order=stream",
    "check": "turbo run check --cache=local:r,remote:r --output-logs=full",
    "clean": "turbo run clean && rm -rf node_modules",
    "db:migrate:core": "turbo run db:migrate:core --filter @oogabooga/database",
    "format": "biome format . --write",
    "generate": "turbo run generate --cache:local:r,remote:r --parallel --continue",
    "lint": "biome check .",
    "lint:fix": "biome check . --write",
    "test": "turbo run test --parallel",
    "prepare": "lefthook install",
    "drizzle-studio": "cd ./packages/state && bun drizzle-kit studio"
  },
  "dependencies": {},
  "devDependencies": {
    "@biomejs/biome": "2.1.3",
    "@types/bun": "latest",
    "lefthook": "1.12.2",
    "turbo": "2.5.5",
    "typescript": "5.9.2"
  },
  "packageManager": "bun@1.2.19",
  "trustedDependencies": [
    "@biomejs/biome"
  ]
}
