{
  "name": "peanutbutterandjam",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "config/*",
    "packages/*",
    "apis/*",
    "infra/*"
  ],
  "scripts": {
    "build": "turbo run build --output-logs=full --log-order=stream",
    "check": "turbo run check --cache=local:r,remote:r --output-logs=full",
    "clean": "turbo run clean && rm -rf node_modules",
    "format": "biome format . --write",
    "generate": "turbo run generate --cache:local:r,remote:r --parallel --continue",
    "lint": "biome check .",
    "lint:fix": "biome check . --write",
    "test": "turbo run test --parallel",
    "prepare": "lefthook install",
    "drizzle-studio": "cd ./packages/state && bun drizzle-kit studio"
  },
  "dependencies": {
    "@peculiar/asn1-pfx": "^2.6.0",
    "@types/hapi__catbox": "12.1.0",
    "@types/node": "24.2.1",
    "c-kzg": "4.1.0",
    "merkletreejs": "^0.6.0"
  },
  "devDependencies": {
    "@biomejs/biome": "2.1.3",
    "@types/bun": "1.3.1",
    "@types/hapi": "18.0.14",
    "@types/hapi__shot": "6.0.0",
    "bun-types": "1.3.1",
    "lefthook": "1.12.2",
    "turbo": "2.5.5",
    "typescript": "5.9.2"
  },
  "catalog": {
    "@noble/hashes": "2.0.1",
    "@noble/curves": "2.0.1",
    "@types/bun": "1.3.2",
    "bun-types": "1.3.2",
    "viem": "2.32.0",
    "zod": "3.25.76",
    "@types/hapi__catbox": "12.1.0",
    "typescript": "5.9.2"
  },
  "packageManager": "bun@1.2.19",
  "trustedDependencies": [
    "@biomejs/biome",
    "c-kzg"
  ]
}
