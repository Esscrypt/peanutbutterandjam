{
  "name": "@pbnj/monorepo",
  "version": "0.0.1",
  "private": true,
  "workspaces": [
    "config/*",
    "packages/*",
    "apis/*",
    "infra/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "check": "turbo run check --cache=local:r,remote:r",
    "clean": "turbo run clean && rm -rf node_modules",
    "db:migrate:core": "turbo run db:migrate:core --filter @pbnj/database",
    "dev": "turbo run dev --cache=local:r,remote:r --parallel --continue",
    "disable-remote-caching": "turbo unlink && rm -rf ./node_modules/.cache/turbo",
    "enable-remote-caching": "turbo link",
    "format": "biome format . --write",
    "generate": "turbo run generate --cache:local:r,remote:r --parallel --continue",
    "lint": "biome check .",
    "lint:fix": "biome check . --write --unsafe --max-diagnostics=1000",
    "test": "turbo run test --parallel",
    "prepare": "lefthook install",
    "drizzle-studio": "cd ./packages/db && bun drizzle-kit studio"
  },
  "dependencies": {},
  "devDependencies": {
    "@biomejs/biome": "2.1.2",
    "@types/bun": "latest",
    "lefthook": "1.12.2",
    "turbo": "2.5.5",
    "typescript": "5.8.3"
  },
  "packageManager": "bun@1.2.19",
  "trustedDependencies": [
    "@biomejs/biome"
  ]
}
