{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [
    ".eslintignore",
    ".eslint.js",
    ".npmrc",
    ".nvmrc",
    ".prettierignore",
    ".prettierrc.js",
    "tsconfig.json",
    "config/typescript/**/*",
    "packages/**/*",
    "infra/**/*",
    "app/**/*"
  ],
  "tasks": {
    "build": {
      "outputs": [],
      "dependsOn": ["^build"],
      "cache": true
    },
    "clean": {
      "cache": false
    },
    "check": {
      "dependsOn": ["^build"],
      "cache": false
    },
    "lint": {
      "dependsOn": ["^build"],
      "outputs": []
    },
    "test": {
      "dependsOn": ["^build"],
      "outputs": [],
      "env": [],
      "cache": false
    }
  }
}
